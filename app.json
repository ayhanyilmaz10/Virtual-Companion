{
  "expo": {
    "name": "Virtual Companion",
    "slug": "virtual-companion",
    "version": "1.0.0",
    "icon": "./assets/icon and splash/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon and splash/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF5F8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.virtualcompanion",
      "icon": "./assets/icon and splash/icon.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon and splash/icon.png",
        "backgroundColor": "#FFF5F8"
      },
      "package": "com.yourcompany.virtualcompanion"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#FFB6C1"
        }
      ]
    ]
  }
}
